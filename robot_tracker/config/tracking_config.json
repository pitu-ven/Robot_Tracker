{
  "_file_info": {
    "file_path": "config/tracking_config.json",
    "version": "1.2", 
    "modification": "Configuration compl√®te pour l'onglet Cible avec gestion des erreurs NoneType"
  },
  
  "target_detection": {
    "aruco": {
      "enabled": true,
      "auto_detect_folder": true,
      "default_markers_folder": "./ArUco",
      "config_file_name": "markers_config.json",
      "supported_extensions": [".png", ".jpg", ".jpeg"],
      "dictionary_type": "4X4_50",
      "detection_params": {
        "adaptiveThreshWinSizeMin": 3,
        "adaptiveThreshWinSizeMax": 23,
        "adaptiveThreshWinSizeStep": 10,
        "adaptiveThreshConstant": 7,
        "minMarkerPerimeterRate": 0.03,
        "maxMarkerPerimeterRate": 4.0,
        "polygonalApproxAccuracyRate": 0.03,
        "minCornerDistanceRate": 0.05,
        "minDistanceToBorder": 3,
        "markerBorderBits": 1,
        "perspectiveRemovePixelPerCell": 4,
        "perspectiveRemoveIgnoredMarginPerCell": 0.13,
        "maxErroneousBitsInBorderRate": 0.35,
        "minOtsuStdDev": 5.0,
        "errorCorrectionRate": 0.6
      }
    },
    "reflective_markers": {
      "enabled": true,
      "hsv_ranges": {
        "lower": [0, 0, 200],
        "upper": [180, 30, 255]
      },
      "morphology": {
        "kernel_size": 5,
        "iterations": 2
      },
      "contour_filters": {
        "min_area": 50,
        "max_area": 5000,
        "min_circularity": 0.7,
        "min_convexity": 0.8
      }
    },
    "led_markers": {
      "enabled": true,
      "color_presets": {
        "red": {"h": [0, 10], "s": [50, 255], "v": [50, 255]},
        "green": {"h": [40, 80], "s": [50, 255], "v": [50, 255]},
        "blue": {"h": [100, 130], "s": [50, 255], "v": [50, 255]},
        "yellow": {"h": [20, 30], "s": [50, 255], "v": [50, 255]},
        "cyan": {"h": [80, 100], "s": [50, 255], "v": [50, 255]},
        "magenta": {"h": [140, 180], "s": [50, 255], "v": [50, 255]}
      },
      "detection_params": {
        "gaussian_blur_size": 5,
        "morphology_kernel": 3,
        "morphology_iterations": 2,
        "min_contour_area": 30,
        "max_contour_area": 2000
      }
    }
  },
  
  "target_tab_ui": {
    "window": {
      "title": "Onglet Cible - Robot Tracker",
      "update_interval_ms": 33,
      "ui_refresh_rate": 30,
      "control_panel_width": 320,
      "video_display_min_height": 480
    },
    "roi": {
      "enabled": true,
      "default_type": "rectangle",
      "line_thickness": 2,
      "selection_handles_size": 8,
      "max_roi_count": 10,
      "colors": {
        "active": [255, 255, 0],
        "inactive": [128, 128, 128],
        "selected": [0, 255, 255]
      }
    },
    "display": {
      "colors": {
        "aruco_detection": [0, 255, 0],
        "reflective_detection": [255, 0, 0],
        "led_detection": [0, 0, 255],
        "trajectory": [0, 255, 255],
        "roi_active": [255, 255, 0],
        "roi_inactive": [128, 128, 128]
      },
      "overlays": {
        "show_detection_boxes": true,
        "show_confidence_scores": true,
        "show_trajectory_history": true,
        "trajectory_max_points": 50,
        "show_roi_boundaries": true,
        "show_statistics_overlay": false
      }
    },
    "export": {
      "formats": ["csv", "json", "xlsx"],
      "default_format": "csv",
      "include_timestamps": true,
      "include_confidence": true,
      "include_roi_info": true
    }
  },
  
  "kalman_filter": {
    "enabled": true,
    "process_noise": 0.01,
    "measurement_noise": 0.1,
    "error_covariance": 1.0,
    "state_transition": {
      "position": 1.0,
      "velocity": 0.1
    }
  },
  
  "prediction": {
    "enabled": true,
    "horizon_frames": 5,
    "confidence_threshold": 0.7,
    "velocity_smoothing": 0.8
  },
  
  "tracking": {
    "max_tracking_distance": 50.0,
    "min_detection_confidence": 0.5,
    "track_timeout_frames": 10,
    "new_track_threshold": 3,
    "track_history_length": 100
  },
  
  "performance": {
    "max_detections_per_frame": 20,
    "detection_skip_frames": 0,
    "roi_processing_threads": 2,
    "cache_detection_results": true
  }
}